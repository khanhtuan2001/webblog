@model Webblog.Models.Role

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create</h2>


<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="control-label">Têm quyền truy cập</label>
                    <input asp-for="RoleName" type="text" class="form-control is-valid" id="validationServer01" placeholder="nhập mã" value="" required>

                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label  class="control-label">mô tả</label>
                    <input asp-for="RoleDecription" type="text" class="form-control is-valid" id="validationServer02" placeholder="nhập mô tả" value="" required>

                    <span asp-validation-for="RoleDecription" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>


