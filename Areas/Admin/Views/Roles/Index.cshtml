@model IEnumerable<Webblog.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Member</h2>

<p>
    <a asp-action="Create" class="btn btn-info">Create New</a>
</p>
<div class="main-content-container container-fluid px-4">
 
    <!-- Default Light Table -->
    <div class="row">
        <div class="col">
            <div class="card card-small mb-4">
                <div class="card-header border-bottom">
                    <h6 class="m-0">Active Users</h6>
                    
                    
                </div>
                
                <div class="card-body p-0 pb-3 text-center">
                    <table class="table mb-0">
                        <thead class="bg-light">
                            <tr>

                                <th scope="col" class="border-0">Tên quyền truy cập</th>
                                <th scope="col" class="border-0">mô tả</th>
                                <th scope="col" class="border-0"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoleName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoleDecription)
                                    </td>
                                    <td>
                                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.RoleId">Edit</a> |
                                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.RoleId">Details</a> |
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.RoleId">Delete</a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

 </div>


