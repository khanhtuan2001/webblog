@model Webblog.Models.Role

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />
    <div class="card-body p-0 pb-3 bg-light text-center">
        <table class="table table-light mb-0">
            <thead class="thead-light">
                <tr>
                    <th scope="col" class="border-bottom-0">Tên quyền truy cập</th>
                    <th scope="col" class="border-bottom-0">Mô tả</th>
                   
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td> @Html.DisplayFor(model => model.RoleName)</td>
                    <td> @Html.DisplayFor(model => model.RoleDecription)</td>
                  
                </tr>
               
            </tbody>
        </table>
    </div>


    <form asp-action="Delete">
        <input type="hidden" asp-for="RoleId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
